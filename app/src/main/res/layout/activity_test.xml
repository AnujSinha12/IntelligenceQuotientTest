<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#fd8b03"
tools:context="com.example.anujsinha.intelligencequotient.TestActivity"
    >

    <TextView
        android:id="@+id/tvsecond"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="SS"
        android:textColor="#9f4a2c"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />


    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Time is ticking out press any of these to start your test"
        android:textAllCaps="true"
        android:textColor="#fbfbf9"
        android:textIsSelectable="false"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/button2"
        android:layout_centerVertical="true"
        android:background="#59680c"
        android:text="Press to start Test" />

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/button"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#59680c"
        android:text="Press to start Test" />

    <Button
        android:id="@+id/button3"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/button4"
        android:layout_alignStart="@+id/button2"
        android:layout_marginBottom="23dp"
        android:background="#59680c"
        android:text="Press to start Test" />

    <Button
        android:id="@+id/button4"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button3"
        android:layout_marginBottom="28dp"
        android:background="#59680c"
        android:text="Press to start Test" />

    </RelativeLayout>

<TextView
    android:id="@+id/textView26"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="133dp"
    android:text="Time Left"
    android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tvminute"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:text="MM"
        android:textColor="#9f4a2c"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView26" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="10dp"
        android:layout_height="40dp"
        android:text=":"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvminute" />


</RelativeLayout>