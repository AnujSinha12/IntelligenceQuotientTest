<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.anujsinha.intelligencequotient.RegisterActivity"
android:background="#0cedde">
<TextView
    android:id="@+id/textView2"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:text="Register"
    android:textAlignment="center"
    android:textSize="36sp"
    android:textStyle="bold"
    tools:textColor="#fbfcfc"
    />

<EditText
    android:id="@+id/etname"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/textView2"
    android:layout_marginTop="21dp"
    android:background="#fbfcfc"
    android:hint="name"
    android:maxLength="15"
    android:theme="@style/AppTheme" />
<EditText
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#fbfcfc"
    android:hint="user id"
    android:id="@+id/etuserid"
    android:maxLength="10"
    android:layout_above="@+id/etpass"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="24dp" />

<EditText
    android:id="@+id/etpass"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_above="@+id/etage"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="24dp"
    android:background="#fbfcfc"
    android:hint="password"
    android:inputType="textPassword"
    android:maxLength="10" />
<EditText
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#fbfcfc"
    android:hint="age"
    android:id="@+id/etage"
    android:maxLength="2"
    android:layout_above="@+id/radioSex"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="38dp" />
<RadioGroup
    android:id="@+id/radioSex"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_above="@+id/btnreg"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="20dp">


    <RadioButton
        android:id="@+id/radioMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnreg"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="14dp"
        android:checked="true"
        android:text="Male" />

    <RadioButton
        android:id="@+id/radioFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/radioMale"
        android:layout_alignBottom="@+id/radioMale"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:text="Female" />
</RadioGroup>

<Button
    android:id="@+id/btnreg"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@android:drawable/alert_dark_frame"
    android:elevation="7dp"
    android:text="Register"
    android:textColor="#f7f9f9"
    android:layout_marginBottom="21dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true" />


</RelativeLayout>
